{
	"root": true,
	"extends": [
		"wikimedia/client-es6",
		"wikimedia/mediawiki",
		"wikimedia/jquery"
	],
	"ignorePatterns": [
		"resources/js/dist"
	],
	"rules": {
		"no-var": "off",
		"prefer-const": "off",
		"no-jquery/no-global-selector": "warn",
		"no-jquery/no-parse-html-literal": "warn",
		"no-jquery/no-ready-shorthand": "warn",
		"no-jquery/variable-pattern": "warn"
	}
}
